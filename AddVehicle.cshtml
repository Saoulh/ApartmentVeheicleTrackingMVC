
@model VehicleViewModel

<br />
<center>
    <h2>
        Apartment Vehicle Registration

    </h2>
</center>
<hr />

<form asp-action="AddVehicle" role="form">


    <div class="modal-body form-horizontal">
        <center> <div asp-validation-summary="ModelOnly" class="text-danger"></div> </center>
        
        <div class="form-group">
            <label asp-for="OwnerId" class="col-lg-3 col-sm-3 control-label"></label>
            <div class="col-lg-6">
                <select asp-for="OwnerId" class="form-control" asp-items="Model.Owner">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="OwnerId " class="text-danger"></span>
            </div>

        </div>



        <div class="form-group">
            <label asp-for="MakeId" class="col-lg-3 col-sm-3 control-label"></label>
            <div class="col-lg-6">
                <select asp-for="MakeId" class="form-control" asp-items="Model.Make" id="Make">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="MakeId " class="text-danger"></span>
            </div>

        </div>
        <div class="form-group">
            <label asp-for="ModelId" class="col-lg-3 col-sm-3 control-label"></label>
            <div class="col-lg-6">
                <select asp-for="ModelId" class="form-control" asp-items="Model.Model" id="Model">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="ModelId " class="text-danger"></span>
            </div>

        </div>
        <div class="form-group">
            <label asp-for="Color" class="col-lg-3 col-sm-3 control-label"></label>
            <div class="col-lg-6">
                <input asp-for="Color" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Registration" class="col-lg-3 col-sm-3 control-label"></label>
            <div class="col-lg-6">
                <input asp-for="Registration" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DateRegistered" class="col-lg-3 col-sm-3 control-label"></label>
            <div class="col-lg-6">
                <input asp-for="DateRegistered" class="form-control" />
            </div>
        </div>

    </div>
    <hr />
    <div class="col-lg-12 col-lg-offset-3">
        <button type="submit" class="btn btn-primary">Save </button>
       
        <a id="cancel" asp-action="Index" class="btn btn-primary">
            <i class=""></i>  Cancel
        </a>
    </div>
    <br />
    
</form>





